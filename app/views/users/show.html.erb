<div>
<%= link_to "New OOTD",  new_ootd_path, class: "btn btn-default btn-primary" %>
</div>


<h1> Welcome, <%= @user.name %>!  </h1>
<div>
	<%= image_tag @user.user_img.url(:medium) %>
</div>
<div>
  Username: <%= @user.username %>  <br/>
  City: <%= @user.city %> <br/>
  Member Since: <%= @user.created_at %> 
</div>

<div>
	<img src="<%= @user.user_image %>">
</div>

<h2>Your Contributed OOTDS </h2>
<br><br>
<div class='list-group'>
<% @ootds.each do |ootd| %>
	<div>
		<%= image_tag ootd.ootd_img.url(:medium) %>
	</div>
	<div>
		Trend: <%= link_to ootd.trend, "/ootds/#{ootd.id}"%>  <br>
		Caption: <%= ootd.caption %> <br>
	
	</div>
	<br>

<% end %>
</div>