<!-- add items form -->


<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<h1>Upload New OOTD Items </h1>
			<%= form_for ([:ootd, @item]) do |f| %>
				  <div>
	
				    <%= f.text_field :item_category, placeholder: "Category", class: "form-control" %>
				  </div>	
				  <div>
				    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
				  </div>
				  <div>
				    <%= f.text_field :purchase_link, placeholder: "Purchase Link", class: "form-control" %>
				  </div>


				   	<h4>Upload Photo: </h4>
				  <div>
				  	 <%= f.file_field :item_img, class: "form-control" %>
				  </div>
				  <br>

				  <%= f.submit "Submit", class: "btn btn-primary" %>


			<% end %>


		<br>

		<%= link_to "Back",  ootds_path %>

	</div>
</div>