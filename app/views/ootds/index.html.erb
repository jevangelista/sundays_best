<h1 class="ootd-gallery">OOTD Gallery </h1>

<div>
<%= link_to "New OOTD",  new_ootd_path, class: "btn btn-default btn-primary" %>
</div>

<br><br>

<div id="pins" class="transitions-enabled">
	<% @ootds.each do |ootd| %>
		<div class="box panel panel-default">
			<%= image_tag ootd.ootd_img.url(:medium) %>
			<div class="panel-body">
				Trend: <%= link_to ootd.trend, "/ootds/#{ootd.id}"%> 
				Caption: <%= ootd.caption %> 
			</div>
		</div>
	<% end %>
</div>

<script>
	$(function(){

	  var $container = $('#pins');

	  $container.imagesLoaded(function(){
	    $container.masonry({
	      itemSelector: '.box',
	      isFitWidth: true
	    });
	  });
	 });

</script>