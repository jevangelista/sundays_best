<h1 class="ootd-gallery">OOTD Gallery </h1>

<div>
  <h2> Search OOTD's by Trend </h2>
  <%= form_tag(ootds_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append form-group">
      <%= text_field_tag :search, params[:search], placeholder: "Search Trends", class: "form-control" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <%= submit_tag "Search", class: "btn btn-default" %>
    </div>
  <% end %>
</div>

<br><br>


<div>
<%= link_to "New OOTD",  new_ootd_path, class: "btn btn-default btn-primary" %>
</div>
<div>
<%= link_to "Back to OOTD Gallery",  ootds_path, class: "btn btn-default btn-primary" %>
</div>


<br><br>

<div id="pins" class="transitions-enabled">
	<% @ootds.each do |ootd| %>
		<div class="box panel panel-default">
			<%= image_tag ootd.ootd_img.url(:medium) %>
			<div class="panel-body">
				<%= link_to ootd.trend, "/ootds/#{ootd.id}"%> <br/>
				<%= ootd.caption %> <br>
				<%=ootd.user.username %>
				
			</div>
		</div>
	<% end %>
</div>

<script>
	$(function(){

	  var $container = $('#pins');

	  $container.imagesLoaded(function(){
	    $container.masonry({
	      itemSelector: '.box',
	      isFitWidth: true
	    });
	  });
	 });

</script>